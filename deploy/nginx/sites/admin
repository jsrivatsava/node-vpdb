server {
	listen 8089;

	location /monitorix {
		auth_basic "Restricted";
		auth_basic_user_file /etc/monitorix/.htpasswd;

		include proxy_params;
		proxy_pass http://127.0.0.1:8080/monitorix;

		location ~ ^/monitorix/(.+\.png)$ {
			alias /var/lib/monitorix/www/$1;
		}
	}

	location /nginx_status {
		stub_status on;
		access_log off;
		allow 127.0.0.1;
		deny all;
	}
}
